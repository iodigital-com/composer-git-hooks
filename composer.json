{
    "name": "isaac/composer-git-hooks",
    "type": "composer-plugin",
    "license": "proprietary",
    "description": "ISAAC Composer Git Hooks",
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "~7.2.0 || ~7.3.0",
        "composer-plugin-api": "^1.1",
        "composer/composer": "^1.10"
    },
    "require-dev": {
        "isaac/php-code-sniffer-standard": "^17.0",
        "phpstan/phpstan": "^0.12",
        "isaac/phpstorm-copyright": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "ISAAC\\ComposerGitHooks\\": "src/"
        }
    },
    "repositories": {
        "isaac-php-code-sniffer": {
            "type": "vcs",
            "url": "git@gitlab.isaac.local:php-module/isaac-php-code-sniffer-standard.git"
        },
        "isaac/phpstorm-copyright": {
            "type": "vcs",
            "url": "git@gitlab.isaac.local:php-module/isaac-phpstorm-copyright.git"
        }
    },
    "extra": {
        "class": "ISAAC\\ComposerGitHooks\\ComposerPlugin"
    }
}
